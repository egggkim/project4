<!DOCTYPE html>
<html ng-app='app'>
<head>
  <% if logged_in? %>
    <title ng-bind="title"></title>
    <!-- refers to the $rootScope title that was created -->
  <% else %>
    <title><%= yield(:title) %></title>
    <!-- if angular, show angular title - else show rails title -->
  <% end %>

  <%= stylesheet_link_tag    'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <!-- sourcing files for fullcalendar -->
  <link rel='stylesheet' href='http://cdnjs.cloudflare.com/ajax/libs/fullcalendar/2.2.7/fullcalendar.min.css' />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.9.0/moment.min.js'></script>
  <script src='http://cdnjs.cloudflare.com/ajax/libs/fullcalendar/2.2.7/fullcalendar.min.js'></script>
</head>

<body>
<%= render 'shared/nav' %>

<%= yield %>

</body>
</html>
